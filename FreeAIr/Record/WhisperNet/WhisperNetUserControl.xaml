<UserControl
    x:Class="FreeAIr.Record.WhisperNet.WhisperNetUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FreeAIr.Record.WhisperNet"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Width="700"
    >
    <Grid
        VerticalAlignment="Top"
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition MinHeight="200" Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition MinWidth="200" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="2"
            Content="Model file path:"
            ToolTip="Model file path."
            />

        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="2"
            AcceptsReturn="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="ModelFilePathTextBox"
            TextChanged="ModelFilePathTextBox_TextChanged"
            />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Download model from huggingface..."
            Cursor="Hand"
            Foreground="#569CD6"
            MouseLeftButtonUp="Label_MouseLeftButtonUp"
            />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="2"
            Content="System prompt:"
            />

        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"
            AcceptsReturn="True"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="PromptTextBox"
            TextChanged="PromptTextBox_TextChanged"
            />

    </Grid>
</UserControl>

<UserControl
    x:Class="FreeAIr.Record.WhisperOpenAI.WhisperOAIUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FreeAIr.Record.WhisperNet"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Width="700"
    >
    <Grid
        VerticalAlignment="Top"
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition MinHeight="200" Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition MinWidth="200" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="2"
            Content="Model name:"
            ToolTip="Model name."
            />

        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="2"
            AcceptsReturn="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="ModelNameTextBox"
            TextChanged="ModelNameTextBox_TextChanged"
            />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Download model from huggingface..."
            Cursor="Hand"
            Foreground="#569CD6"
            MouseLeftButtonUp="Label_MouseLeftButtonUp"
            />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="2"
            Content="OpenAI token:"
            ToolTip="OpenAI token. You may use ${MY_ENV_NAME} notation to hide the secret inside your MY_ENV_NAME environment variable."
            />

        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="2"
            AcceptsReturn="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="TokenTextBox"
            TextChanged="TokenTextBox_TextChanged"
            />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="2"
            Content="OpenAI endpoint:"
            ToolTip="OpenAI endpoint."
            />

        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="2"
            AcceptsReturn="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="EndpointTextBox"
            TextChanged="EndpointTextBox_TextChanged"
            />


        <Label
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="2"
            Content="System prompt:"
            />

        <TextBox
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"
            AcceptsReturn="True"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="PromptTextBox"
            TextChanged="PromptTextBox_TextChanged"
            />

    </Grid>
</UserControl>

<UserControl
    x:Class="FreeAIr.UI.Dialog.Content.Tools.VisualStudio_ReplaceDocumentBody_UserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FreeAIr.UI.Dialog.Content.Tools"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    x:Name="ToolControl"
    >
    <Grid
        HorizontalAlignment="Right"
        >
        <Button
            Content="{Binding ElementName=ToolControl, Path=PreviewContent}"
            Style="{DynamicResource TextBlockLikeButtonStyle}"
            Command="{Binding ElementName=ToolControl, Path=PreviewContentCommand}"
            />
    </Grid>
</UserControl>

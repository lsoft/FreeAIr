<Window
    x:Class="FreeAIr.UI.Windows.WaitGitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FreeAIr"
    xmlns:ui="clr-namespace:FreeAIr.UI"
    mc:Ignorable="d" 
    d:DesignHeight="150" d:DesignWidth="400"
    Height="150" Width="400"
    ui:VsTheme.UseVsTheme="True"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    Loaded="Window_Loaded"
    Closing="Window_Closing"
    Keyboard.KeyUp="Window_KeyUp"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Margin="2"
            Content="Please wait for git patch building..."
            />

        <Button
            Grid.Row="1"
            HorizontalAlignment="Right"
            Margin="2"
            Padding="10,5,10,5"
            Width="100"
            Content="Cancel"
            Name="CancelButton"
            Click="CancelButton_Click"
            />
    </Grid>
</Window>

<Window
    x:Class="FreeAIr.UI.Windows.InSituChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FreeAIr"
    xmlns:ui="clr-namespace:FreeAIr.UI"
    xmlns:et="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="600"
    Height="350" Width="700"
    ui:VsTheme.UseVsTheme="True"
    xmlns:resources="clr-namespace:FreeAIr.Resources"
    xmlns:chat="clr-namespace:FreeAIr.UI.Chat"
    WindowStartupLocation="Manual"
    ShowInTaskbar="True"
    Topmost="True"
    WindowStyle="None"
    SizeChanged="Window_SizeChanged"
    PreviewKeyUp="Window_PreviewKeyUp"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    >
    <Border
        BorderBrush="#569CD6"
        BorderThickness="1"
        Margin="0"
        Padding="1"
        >

        <Grid
            >
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="20" Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Margin="0"
                    Width="0"
                    Height="0"
                    IsEnabled="True"
                    Visibility="Collapsed"
                    x:Name="ForegroundButton"
                    />

                <CheckBox
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"
                    Content="Close if switch away"
                    IsChecked="{Binding CloseIfSwitchAway}"
                    />

                <Button
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,2,5,2"
                    Content="Open full window"
                    Background="Transparent"
                    FontFamily="Cascadia Code"
                    Command="{Binding Path=OpenFullWindowCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

                <Button
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="5,2,5,2"
                    Content="Close"
                    Background="Transparent"
                    FontFamily="Cascadia Code"
                    Command="{Binding Path=CloseCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

            </Grid>

            <chat:ChatControl
                Grid.Row="1"
                x:Name="ChatControlName"
                Foreground="{Binding ElementName=ForegroundButton, Path=Foreground}"
                Chat="{Binding CurrentChat}"
                />

        </Grid>
        
    </Border>

</Window>

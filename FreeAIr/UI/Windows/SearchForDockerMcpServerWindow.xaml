<Window
    x:Class="FreeAIr.UI.Windows.SearchForDockerMcpServerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:ui="clr-namespace:FreeAIr.UI"
    xmlns:local="clr-namespace:FreeAIr.UI.Windows"
    mc:Ignorable="d" 
    ui:VsTheme.UseVsTheme="True"
    ShowInTaskbar="False"
    d:DesignHeight="450" d:DesignWidth="800"
    Name="SearchForDockerMcpServerName"
    Loaded="Window_Loaded"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button
            Visibility="Collapsed"
            Width="0"
            Height="0"
            Name="ForegroundButton"
            />

        <TextBox
            Grid.Row="0"
            Margin="2"
            HorizontalAlignment="Stretch"
            FontFamily="Cascadia Code"
            Text="{Binding Path=Filter, UpdateSourceTrigger=PropertyChanged}"
            />

        <ListView
            Grid.Row="1"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding FilteredServerList}"
            SelectedItem="{Binding SelectedServer}"
            >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Margin="2,5,2,5"
                        >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            TextWrapping="Wrap"
                            Text="{Binding ServerName}"
                            Foreground="{Binding ElementName=ForegroundButton, Path=Foreground}"
                            />

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Orientation="Horizontal"
                            >

                            <Button
                                Content="Install and setup..."
                                Margin="15,0,5,0"
                                FontSize="12"
                                FontFamily="Cascadia Code"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding ElementName=SearchForDockerMcpServerName, Path=DataContext.InstallAndSetupCommand}"
                                CommandParameter="{Binding}"
                                Style="{DynamicResource TextBlockLikeButtonStyle}"
                                />

                            <Button
                                Content="Open in browser..."
                                Margin="15,0,5,0"
                                FontSize="12"
                                FontFamily="Cascadia Code"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding OpenBrowserCommand}"
                                Style="{DynamicResource TextBlockLikeButtonStyle}"
                                />

                        </StackPanel>
                        

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            FontFamily="Cascadia Code"
                            FontWeight="Bold"
                            Text="{Binding ServerDescription}"
                            Foreground="{Binding ElementName=ForegroundButton, Path=Foreground}"
                            />

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



    </Grid>
</Window>

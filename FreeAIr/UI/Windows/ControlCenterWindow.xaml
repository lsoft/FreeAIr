<Window
    x:Class="FreeAIr.UI.Windows.ControlCenterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FreeAIr"
    xmlns:ui="clr-namespace:FreeAIr.UI"
    mc:Ignorable="d" 
    d:DesignHeight="700" d:DesignWidth="1000"
    Height="700" Width="1000"
    ui:VsTheme.UseVsTheme="True"
    ShowInTaskbar="False"
    Title="FreeAIr Control Center"
    >
    <ScrollViewer
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto"
        Margin="5,5,5,30"
        Name="MainScrollViewerName"
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/> <!-- 0 -->
                <RowDefinition Height="auto"/> <!-- 1 -->
                <RowDefinition Height="auto"/> <!-- 2 -->
                <RowDefinition Height="auto"/> <!-- 3 -->
                <RowDefinition Height="auto"/> <!-- 4 -->
                <RowDefinition Height="auto"/> <!-- 5 -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ScrollViewer
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                MaxHeight="350"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                >
                <TextBox
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="2"
                    FontSize="12"
                    FontFamily="Cascadia Code"
                    Text="{Binding OptionsJson, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    BorderBrush="{Binding OptionsJsonBorder}"
                    BorderThickness="1"
                    MinHeight="150"
                    AcceptsReturn="True"
                    />
            </ScrollViewer>

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0,0,8,0"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                >

                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Margin="10,0,10,0"
                    FontFamily="Cascadia Code"
                    Content="Store options..."
                    Command="{Binding StoreOptionsCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Margin="10,0,10,0"
                    FontFamily="Cascadia Code"
                    Content="Store to options file..."
                    Command="{Binding StoreOptionsToFileCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Margin="10,0,10,0"
                    FontFamily="Cascadia Code"
                    Content="Delete options file..."
                    Command="{Binding DeleteOptionsFileCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Margin="10,0,10,0"
                    FontFamily="Cascadia Code"
                    Content="Store as VS options..."
                    Command="{Binding StoreAsVSOptionsCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Margin="10,0,10,0"
                    FontFamily="Cascadia Code"
                    Content="Clear VS options..."
                    Command="{Binding ClearVSOptionsCommand}"
                    Style="{DynamicResource TextBlockLikeButtonStyle}"
                    />

            </StackPanel>


            <Button
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0,20,8,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="12"
                FontFamily="Cascadia Code"
                Content="Edit agents..."
                Command="{Binding EditAgentCommand}"
                Style="{DynamicResource TextBlockLikeButtonStyle}"
                />

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0,2,8,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="12"
                FontFamily="Cascadia Code"
                Content="Edit actions..."
                Command="{Binding EditActionCommand}"
                Style="{DynamicResource TextBlockLikeButtonStyle}"
                />

            <Button
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,2,8,2"
                FontSize="12"
                FontFamily="Cascadia Code"
                Content="Edit global MCP tools..."
                Command="{Binding EditGlobalToolsCommand}"
                Style="{DynamicResource TextBlockLikeButtonStyle}"
                Name="MCPAppyButton"
                />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="12"
                FontFamily="Cascadia Code"
                Margin="0,20,8,0"
                Content="Github MCP Server status:"
                />

            <Label
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,20,8,0"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="12"
                FontFamily="Cascadia Code"
                Content="{Binding GithubMcpServerStatusMessage}"
                />

            <Button
                Grid.Row="5"
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,20,8,0"
                FontSize="12"
                FontFamily="Cascadia Code"
                Content="Install Github MCP server..."
                Command="{Binding InstallGithubMCPServerCommand}"
                Style="{DynamicResource TextBlockLikeButtonStyle}"
                />
        </Grid>
    </ScrollViewer>
</Window>
